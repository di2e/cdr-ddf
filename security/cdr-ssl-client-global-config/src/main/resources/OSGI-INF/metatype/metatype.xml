    xmlns:metatype="http://www.osgi.org/xmlns/metatype/v1.2.0">

    <OCD description="Configure the allowed SSL ciphers to be used" name="CDR SSL Cipher Configuration" id="cdr-ssl-client-global-config">

        <AD name="Ciphers" id="ciphers" required="true" type="String" default=".*_WITH_AES_.*,.*_EXPORT_.,.*_EXPORT1024_.*,.*_WITH_DES_.*,.*_WITH_NULL_.*,.*_DH_anon_.*" cardinality="100"
