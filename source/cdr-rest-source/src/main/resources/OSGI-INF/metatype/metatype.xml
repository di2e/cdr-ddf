<metatype:MetaData xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.osgi.org/xmlns/metatype/v1.2.0 http://www.osgi.org/xmlns/metatype/v1.2.0"
    xmlns:metatype="http://www.osgi.org/xmlns/metatype/v1.2.0">

    <OCD description="CDR v3.0 REST Federated Source" name="CDR REST (OpenSearch) Federated Source" id="CDRRestSource">
        <AD name="Source Name" id="id" required="true" type="String" default="cdr-source" />
        <AD name="CDR Endpoint URL" id="endpointUrl" required="true" type="String"
            default="http://localhost:8181/services/cdr/search/rest" />
            
        <AD name="Check Availability" id="httpPing" type="Boolean" default="true"
            description="Check the box if you want to get site status by using the HTTP HEAD method to the base URL" />
            
    </OCD>

    <Designate pid="CDRRestSource" factoryPid="CDRRestSource">
        <Object ocdref="CDRRestSource" />
    </Designate>
</metatype:MetaData>
