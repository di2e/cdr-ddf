<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>net.di2e.ecdr</groupId>
        <artifactId>source</artifactId>
        <version>1.1.1-SNAPSHOT</version>
    </parent>

    <groupId>net.di2e.ecdr.source</groupId>
    <artifactId>cdr-rest-source</artifactId>
    <name>Enterprise CDR :: Sources :: REST Search Source</name>
    <packaging>bundle</packaging>

    <dependencies>
        <dependency>
            <groupId>net.di2e.ecdr.libs</groupId>
            <artifactId>cdr-rest-search-commons</artifactId>
            <version>${project.version}</version>
        </dependency>
        
        <dependency>
            <groupId>net.di2e.ecdr.libs</groupId>
            <artifactId>cdr-libs-cache</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>net.di2e.ecdr.transformer</groupId>
            <artifactId>cdr-atom-result-xformer</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>ddf.registry.core</groupId>
            <artifactId>registry-core-api</artifactId>
        </dependency>

        <dependency>
            <groupId>org.codice.ddf</groupId>
            <artifactId>platform-configuration-impl</artifactId>
        </dependency>

        <dependency>
            <groupId>ddf.security</groupId>
            <artifactId>ddf-security-common</artifactId>
            <version>2.5.1</version>
        </dependency>

        <dependency>
            <groupId>commons-net</groupId>
            <artifactId>commons-net</artifactId>
            <version>3.3</version>
        </dependency>

        <dependency>
            <groupId>org.apache.cxf</groupId>
            <artifactId>cxf-bundle</artifactId>
        </dependency>

        <dependency>
            <groupId>com.hazelcast</groupId>
            <artifactId>hazelcast</artifactId>
        </dependency>

        <dependency>
            <groupId>javax.cache</groupId>
            <artifactId>cache-api</artifactId>
            <version>1.0.0</version>
        </dependency>

        <dependency>
            <groupId>joda-time</groupId>
            <artifactId>joda-time</artifactId>
        </dependency>

        <!-- Test Dependencies -->

        <dependency>
            <groupId>ddf.catalog.core</groupId>
            <artifactId>filter-proxy</artifactId>
            <version>${ddf.catalog.version}</version>
            <scope>test</scope>
        </dependency>

        <!-- Two-way SSL Testing -->
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <version>2.5</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.eclipse.jetty</groupId>
            <artifactId>jetty-server</artifactId>
            <version>8.1.14.v20131031</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.eclipse.jetty</groupId>
            <artifactId>jetty-servlet</artifactId>
            <version>8.1.14.v20131031</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-all</artifactId>
            <version>1.1</version>
            <scope>test</scope>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Embed-Transitive>true</Embed-Transitive>
                        <Embed-Dependency>
                            catalog-core-api-impl,
                            joda-time,
                            commons-net,
                            hazelcast,
                            cache-api,
                            cdr-libs-cache,
                        </Embed-Dependency>
                        <Import-Package>
                            !org.joda.convert,
                            !javax.enterprise.util,
                            org.apache.logging.log4j.*;resolution:=optional,
                            org.osgi.framework;version="[1.6,2)",
                            net.di2e.ecdr.commons,
                            org.apache.cxf.*;version="[2.7.0, 4.0)",
                            org.apache.ws.security.*;resolution:=optional,
                            
                            *
                        </Import-Package>
                        <Private-Package>
                            net.di2e.ecdr.source.*,
                            org.codice.ddf.security.common.jaxrs
                        </Private-Package>
                        <Export-Package />
                    </instructions>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.mycila</groupId>
                <artifactId>license-maven-plugin</artifactId>
                <version>2.8</version>
                <configuration>
                    <excludes>
                        <!-- Contains LGPL licensed files and must stay LGPL -->
                        <exclude>**/TrustedServlet.java</exclude>
                        <exclude>**/CDRRestSourceSecureTest.java </exclude>
                    </excludes>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>check</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
