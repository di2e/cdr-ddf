<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0" xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:cxf="http://cxf.apache.org/blueprint/core"
           xsi:schemaLocation="
        http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
        http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd
        http://cxf.apache.org/blueprint/core http://cxf.apache.org/schemas/blueprint/core.xsd">

    <!-- Registry OSGi Service -->
    <reference-list id="endpointList" interface="net.di2e.ecdr.search.api.RegistrableService" availability="optional" />
    <bean id="serviceRegistry" class="net.di2e.ecdr.registry.internal.service.ServiceRegistryService">
        <argument ref="endpointList" />
    </bean>

    <service ref="serviceRegistry" auto-export="interfaces" />

    <!-- Registry RESTful Service -->
    <bean id="serviceRegistryEndpointBean" class="net.di2e.ecdr.registry.internal.rest.ServiceRegistryEndpoint">
        <argument ref="serviceRegistry" />
    </bean>

    <jaxrs:server id="serviceRegistryEndpoint" address="/registry">
        <jaxrs:serviceBeans>
            <ref component-id="serviceRegistryEndpointBean" />
        </jaxrs:serviceBeans>
        <jaxrs:features>
            <cxf:logging />
        </jaxrs:features>
    </jaxrs:server>

    <!-- Registry Service Resolver -->
    <reference-list id="identifierList" interface="net.di2e.ecdr.search.api.DynamicServiceIdentifier" />
    <bean id="serviceResolver" class="net.di2e.ecdr.registry.internal.service.DynamicServiceResolverRegistry">
        <argument ref="identifierList" />
    </bean>

    <service ref="serviceResolver" auto-export="interfaces" />

    <!-- Registry Discovery (JmDNS) Service -->
    <bean id="discoveryAgent" class="net.di2e.ecdr.registry.internal.discovery.RegistryDiscoveryAgent"
          init-method="init" destroy-method="destroy" />

</blueprint>